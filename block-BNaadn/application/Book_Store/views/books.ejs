<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!--Title-->
    <title>Document</title>
    <!--Stylesheet-->
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Tourney:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <!--Font Awesome-->
    <script
      src="https://kit.fontawesome.com/5cc6fb9f6b.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <!--Header-->
    <header>
      <div class="container flex justify-between align-center">
        <a class="logo" href="/"> <span>E</span>lib</a>
        <a href="/books"><h3>Library</h3></a>
      </div>
    </header>
    <div class="books container flex justify-between align-center">
      <aside class="flex-23 aside" style="text-align: center">
        <h2 style="text-align: center">Authores</h2>
        <div class="authors">
          <% var arr = []; %>
          <!--  -->
          <% books.forEach(book=>{ %>
          <!--  -->
          <% if(!arr.includes(book.email)){ %>
          <!--  -->
          <% arr.push({"name":book.name,"email":book.email}); %>
          <!--  -->
          <% }; %>
          <!--  -->
          <% });%>
          <!--  -->
          <% arr.forEach(book=>{ %>

          <a href="#" class="btn btn-tertiory"> <%= book %></a>
          <% }); %>
        </div>
        <h2 style="text-align: center">Generes</h2>
        <div class="generes">
          <a href="#" class="btn btn-tertiory"> Genere1</a>
          <a href="#" class="btn btn-tertiory"> Genere2</a>
        </div>
        <a href="/books/new"
          ><button class="btn btn-secondary addbook">Add Book</button></a
        >
      </aside>
      <main class="flex-75 main flex justify-start align-start flex-wrap">
        <% if(books.length){books.forEach(book=>{ %>
        <article class="book flex-30">
          <div>
            <img class="full-width" src="/images/kate-linn.jpg" alt="Image" />
          </div>
          <h1><%= book.title %></h1>
          <a href="/books/<%= book._id %>"
            ><button class="btn btn-secondary">View</button></a
          >
        </article>
        <% });} else{ %>
        <h2 style="text-align: center; width: 100%; color: rgb(104, 104, 243)">
          No Books Added Yet
        </h2>
        <% } %>
      </main>
    </div>
  </body>
</html>
